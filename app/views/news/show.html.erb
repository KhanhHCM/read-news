<div class="container">
  <% @list_news.each do |news| %>
  <div class="h-600x h-sm-auto">
    <div class="h-2-3 h-sm-auto oflow-hidden">

      <div class="pb-5 pr-5 pr-sm-0 float-left float-sm-none w-2-3 w-sm-100 h-100 h-sm-300x">
        <%= link_to news["url"], class:"pos-relative h-100 dplay-block" do %>

          <div class="img-bg bg-1 bg-grad-layer-6"></div>

          <div class="abs-blr color-white p-20 bg-sm-color-7">
            <h3 class="mb-15 mb-sm-5 font-sm-13"><b><%= news["title"] %></b></h3>
            <ul class="list-li-mr-20">
              <li>by <%= news["description"] %></b></li>
              <li><i class="color-primary mr-5 font-12 ion-ios-bolt"></i>30,190</li>
              <li><i class="color-primary mr-5 font-12 ion-chatbubbles"></i>30</li>
            </ul>
          </div><!--abs-blr -->
        <% end %><!-- pos-relative -->
      </div><!-- w-1-3 -->
    </div>
  </div>

</div>



<section>
  <div class="container">
    <div class="row">

      <div class="col-md-12 col-lg-8">
        <a class="dplay-block btn-brdr-primary mt-20 mb-md-50" href="#"><b>VIEW MORE NEWS</b></a>
      </div><!-- col-md-9 -->
    </div>
  </div>
</section>
